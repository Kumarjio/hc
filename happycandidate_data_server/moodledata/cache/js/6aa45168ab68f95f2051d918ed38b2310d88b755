function getStartOver(){var containerdiv=document.getElementById('restart'),startover=document.getElementById('startover'),attempt=document.getElementById('attempt');if(startover!=undefined)if(startover.checked){attempt.value=startover.value;containerdiv.innerHTML=""};return attempt.value}
function openAICCWindow(url,name,options,fullscreen){var startover=getStartOver();if(startover!=undefined)url=url+"%3fattempt="+startover;var aiccWin=window.open('',name,options);if(fullscreen){aiccWin.moveTo(0,0);aiccWin.resizeTo(screen.availWidth,screen.availHeight)};aiccWin.focus();aiccWin.location=url;return aiccWin}
function setTextArea(thewindow,name,value){var _window=thewindow.window,_textarea=_window.document.getElementById('id_'+name),_htmlarea=eval('_window.editor_'+hex_md5(name)),_htmlareaexists=!(typeof _htmlarea=="undefined"),_textareaexists=_textarea.type=='textarea',_tinymceexists=tinyMCE!=null;if(_htmlareaexists){_htmlarea.setHTML(value);return}else if(_tinymceexists){tinyMCE.get('id_'+name).setContent(value);return}else if(_textareaexists){_textarea.value=value;return}}